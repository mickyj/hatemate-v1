
 <div class="home-unit">
        <h1>Welcome to Hate Mate</h1>
        <p>We hope you have some fun, hate a little and find love.</p>
        <p><a href="/users/new" class="btn btn-primary btn-large">Become a Hater</a></p>
      </div>


      <% @users.each do |user| %>
<div class="hero-unit">
    <ul>
      <li>  <%= image_tag user.avatar.url  %>
      <li><%= link_to(user.username, user) %></li>
      <li><%= user.status %></li>
      <li><%= user.location %></li>
      <li class="float_right"><%= user.intro %></li>
    </ul>
 </div>
<% end %>


